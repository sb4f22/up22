<% title "Gifts" %>

<table>
  <tr>
    <th>Campaign</th>
    <th>Name</th>
    <th>Description</th>
    <th>Stock</th>
    <th>Price</th>
  </tr>
  <% for gift in @gifts %>
    <tr>
      <td><%= gift.campaign_id %></td>
      <td><%= gift.name %></td>
      <td><%= gift.description %></td>
      <td><%= gift.stock %></td>
      <td><%= gift.price %></td>
      <td><%= link_to "Show", gift %></td>
      <td><%= link_to "Edit", edit_gift_path(gift) %></td>
      <td><%= link_to "Destroy", gift, :confirm => 'Are you sure?', :method => :delete %></td>
    </tr>
  <% end %>
</table>

<p><%= link_to "New Gift", new_gift_path %></p>
